<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timeSpent"
    android:orientation="vertical"
    android:background="@drawable/blackboard3"

    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="579dp"
        android:layout_weight="1"
        android:background="#9000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#9000"
            android:text="Your \nResult: "
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#00ffff"
            android:layout_weight="0.2"
            android:textSize="50dp"
            android:textStyle="bold"



            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="QUESTION ANSWERED:"
            android:textColor="#00ffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            />

        <TextView
            android:id="@+id/tvAnsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="TEXT"
            android:textAlignment="center"
            android:textColor="#00ffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="TOTAL TIME SPENT:"
            android:textColor="#00ffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            />

        <TextView
            android:id="@+id/tvPlayTime"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:text="TEXT"
            android:textAlignment="center"
            android:textColor="#00ffff"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:textColor="@color/white"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="AVERAGE TIME:"
            android:textColor="#00ffff"
            android:layout_weight="0.1"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAvgTime"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:text="TEXT"
            android:textAlignment="center"
            android:textColor="#00ffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"

            android:textColor="@color/white"


            />

        <TextView
            android:id="@+id/tvGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9000"
            android:text="TEXT"
            android:textAlignment="center"
            android:textColor="#00ffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"


            />

        <Button

            android:id="@+id/btnMeun"
            android:layout_width="412dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/round"
            android:onClick="btnMenu"
            android:text="Back to Menu"
            android:textSize="40dp"
/>

    </LinearLayout>


</LinearLayout>